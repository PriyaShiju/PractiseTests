@model UserViewModel
@{
    ViewData["Title"] = "Change Password ";
}
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div id="information-information" class="container">
    <div class="col-sm-12"><h3> @ViewData["Title"] </h3></div>
    <div class="row">
        <div id="content" class="col-sm-12">

<form id="frmContact" title="Contact Us" method="post" class="col-md-6 offset-md-3 card card-body">
    <div asp-validation-summary="ModelOnly" class="container"> </div>
   
    
    <label asp-for="Password"> Old Password:</label><input asp-for="Password" type="password" /><span  class="text-danger" asp-validation-for="Password"> </span><br />
                <label asp-for="Password"> New Password:</label><input asp-for="Password" type="password" /><span class="text-danger"  asp-validation-for="Password"> </span><br />


    <button type="Submit" class="btn btn-success"> Update Password </button>
    <div class="alert-success">@ViewBag.UserMessage</div>

</form>
        </div>
    </div>
</div>